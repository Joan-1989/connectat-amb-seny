{
  "functions": { "source": "functions" },
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/api/ping", "function": { "functionId": "ping", "region": "europe-west1" } },
      { "source": "/api/gemini", "function": { "functionId": "geminiGenerate", "region": "europe-west1" } },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
